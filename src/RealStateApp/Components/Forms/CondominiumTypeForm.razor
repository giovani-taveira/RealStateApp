<MudCard>
    <EditForm Model="@ViewModel" OnValidSubmit="SubmitForm">
        <MudCardContent>
            <MudTextField Class="mb-4"
                          Variant="Variant.Filled" @bind-Value="@ViewModel.CurrentCondominiumType.Name"
                          Label="Nome"
                          For="@(() => ViewModel.CurrentCondominiumType.Name)" />
            <ValidationMessage For="@(() => ViewModel.CurrentCondominiumType.Name)" />
        </MudCardContent>
        <MudCardActions Style="padding: 16px; margin-top:-20px;">
            <MudButton Class="ml-auto"
                       ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary">Salvar</MudButton>
        </MudCardActions>
    </EditForm>
</MudCard>

